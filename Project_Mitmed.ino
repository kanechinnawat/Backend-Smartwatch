// Parameter: showDate -> true=ขอวันที่, false=ขอเวลา
String getManualDateTime(bool showDate) {
    if (!isTimeSynced) return "Waiting...";

    time_t currentEpoch = initialEpoch + ((millis() - initialMillis) / 1000);
    struct tm * timeinfo = localtime(&currentEpoch);
    char buffer[30];
    
    if (showDate) {
        // Format วันที่: "Wed, 17 Dec"
        strftime(buffer, 30, "%a,%e %b", timeinfo);
    } else {
        // Format เวลา: "HH:MM"
        strftime(buffer, 30, "%R", timeinfo); 
    }

    return String(buffer);
}